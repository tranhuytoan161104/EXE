@page
@model LipstickModel
@{
    ViewData["Title"] = "Advanced AR Makeup Try-On";
}

<div class="container">
    <h1 class="text-center mt-4 mb-4">Trải nghiệm AR Makeup Chuyên nghiệp</h1>

    <div id="live-container">
        <video id="webcam" autoplay playsinline></video>
        <canvas id="webgl-canvas"></canvas>
    </div>

    <div id="controls" class="text-center mt-3">
        <div class="mb-3">
            <label class="form-label fw-bold">Chọn màu son:</label>
            <div id="color-palette">
            </div>
        </div>

        <div class="mb-2">
            <label class="form-label fw-bold">Hiệu ứng làm đẹp da:</label>
            <div class="skin-controls">
                <div class="control-group">
                    <label for="smoothing-slider">Làm mịn:</label>
                    <input type="range" id="smoothing-slider" min="0" max="1" step="0.05" value="0.6">
                </div>
                <div class="control-group">
                    <label for="brightening-slider">Làm sáng:</label>
                    <input type="range" id="brightening-slider" min="0" max="0.2" step="0.01" value="0.08">
                </div>
                <div class="control-group">
                    <label for="pinking-slider">Làm hồng da:</label>
                    <input type="range" id="pinking-slider" min="0" max="0.1" step="0.01" value="0.03">
                </div>
            </div>
        </div>

        <div class="form-check form-switch d-inline-block mt-2">
            <input class="form-check-input" type="checkbox" role="switch" id="debug-mode">
            <label class="form-check-label" for="debug-mode">Chế độ Debug</label>
        </div>
        <div id="debug-info" class="mt-2 text-start"></div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@@mediapipe/face_mesh/face_mesh.js" crossorigin="anonymous"></script>

<script type="module" src="~/js/lipstick.js"></script>